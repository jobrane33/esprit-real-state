<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.HomeFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- User Profile -->
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentEnd="true"
                android:layout_margin="16dp"
                android:src="@drawable/baseline_house_24"
                app:civ_border_width="2dp"
                app:civ_border_color="#FF000000" />

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@id/profile_image"
                android:layout_toStartOf="@id/profile_image"
                android:text="User Name"
                android:textColor="@color/black"
                android:textSize="31dp"
                android:textStyle="bold" />

            <!-- Search bar -->
            <LinearLayout
                android:id="@+id/linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/profile_image"
                android:layout_margin="16dp">

                <EditText
                    android:id="@+id/search"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/bg_search"
                    android:drawableStart="@drawable/baseline_search_24"
                    android:hint="Search here..."
                    android:padding="16dp" />

            </LinearLayout>

            <!-- Categories label -->
            <TextView
                android:id="@+id/top_deal2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/linear"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="Categories for you..."
                android:textSize="25sp"
                android:textStyle="bold" />

            <!-- Categories RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/top_deal_RV1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/top_deal2"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="16dp"
                android:orientation="horizontal" />

            <!-- Properties label -->
            <TextView
                android:id="@+id/top_deal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/top_deal_RV1"
                android:layout_marginStart="16dp"
                android:layout_marginTop="14dp"
                android:text="Best deals for you"
                android:textSize="28sp"
                android:textStyle="bold" />

            <!-- Properties RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/top_deal_RV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/top_deal"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="16dp" />

        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>
